<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/ll_bottom_sheet_layout">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/bottom_sheet_icon"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:contentDescription="icon"
			android:background="?android:attr/selectableItemBackground"
			android:src="@drawable/ic_video_info"/>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_gravity="center_vertical">

			<TextView
				android:id="@+id/bottom_sheet_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Title"
				android:textStyle="bold"/>

			<TextView
				android:id="@+id/bottom_sheet_subtitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:ellipsize="start"
				android:scrollHorizontally="true"
				android:singleLine="true"
				android:text="subTitle"/>

		</LinearLayout>

		<ImageButton
			android:id="@+id/bottom_sheet_close"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:contentDescription="cancel"
			android:background="?android:attr/selectableItemBackground"
			android:src="@drawable/ic_close_circle"/>

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="#FF6577FF"/>

	<ImageView
		android:id="@+id/bottom_sheet_recycler"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="vertical"
		android:src="@drawable/splash1"
		android:scaleType="fitXY"/>

	<TextView
		android:id="@+id/txt_list_empty"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:alpha="0.5"
		android:padding="10dp"
		android:visibility="gone"
		android:textSize="30sp"
		android:text="Empty"
		android:gravity="center"/>

</LinearLayout>

